<div class="row py-3">

    <div class="col-4">

        <div>{{number}}</div>
        <div class="pt-2"><b>{{status}}</b></div>
    </div>

    <div class="col-2">
        <div>
            <div>{{amount.title}}</div>
            <div class="pt-2"><b>{{amount.value}}</b></div>
        </div>
    </div>


    <div class="col-4">
        {{#each images}}
        <img class="card-img-top" style="width: 30%; height: auto;" src={{this}} alt="picture">
        {{/each}}
    </div>


    <div class="col-2">
        <a class="btn btn-primary" href="{{button.link}}">{{button.text}}</a>
    </div>

    <hr>

</div>