<div class="card">
    <div class="row">
        <div class="col-2">
            <img class="card-img-top" src={{image}} alt={{picture.alt}}>
        </div>

        <div class="col-4">
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <p>{{description}}</p>
            </div>
        </div>

        <div class="col-2">
            <div class="pt-4">
                {{price.title}}:
            </div>
            <h5 class="pt-2">
                {{price.value}}
            </h5>
        </div>

        <div class="col-2">
            <div class="pt-5">
                {{amount}}
            </div>
        </div>

        <div class="col-2">
            {{#each buttons}}
            <div class="pt-4">
                <a class={{#if isPrimary}}"btn btn-primary"{{/if}}{{#if isDanger}}"btn
                    btn-outline-danger"{{/if}}href="#">{{text}}</a>
            </div>
            {{/each}}
        </div>

    </div>
</div>