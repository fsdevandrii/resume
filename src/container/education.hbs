<div>
    {{#with main}}
    <main>
        <section>
            {{> title big=true data='My education' }}
            <ul class="ps-5">
                {{#each educations}}
                <li>
                    {{name}}
                    {{#unless isEnd includeZero=true}} (ще в процесі) {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>
        <br>
        <section>
            {{> title data='My certificates' }}
            <ul class="ps-5">
                {{#each certificates}}
                <li>
                    {{name}}
                    {{#if id}} ({{id}}) {{/if}}
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}


</div>