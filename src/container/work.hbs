{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
	{{#with main}}
	<main>
		<section>
			{{> title big=true data='Work history'}}
			<div>
				<ul>
					{{#each works}}
					<li>
						<div>{{position}}</div>

						<br>

						<div>
							{{duration.from}} -
							{{#if duration.to}}
							{{duration.to}}
							{{else}}
							(досі працюю)
							{{/if}}
						</div>

						<br>

						<div>{{> link text=company.name href=company.url blank=true noLine=true}}</div>

						<br>
						<br>

						<div><strong>Projects ({{projectAmount}})</strong></div>

						<ul>
							{{#each projects}}
							<li>
								<div>{{> link text=name href=url blank=true noLine=true}}</div>
								<br>
								<div>
									<p>
										{{about}}
									</p>
								</div>

								<br>

								<em>Project stacks: {{stackAmount.point}}</em>

								<div>
									<ul>
										{{#each stacks}}
										<li>{{name}}</li>
										{{/each}}
									</ul>
								</div>

								<br>

								<em>Project awards</em>
								<div>
									<ul>
										{{#each awards}}
										<li>{{name}}</li>
										{{/each}}
									</ul>
								</div>




							</li>
							{{/each}}

					</li>
					{{/each}}



				</ul>
			</div>
		</section>
	</main>
	{{/with}}


</div>

{{!--
Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
Адже наш layout/default.hbs має вже структуру HTML
--}}