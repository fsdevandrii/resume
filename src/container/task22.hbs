<div>
    <main>
        {{#with page_header}}
        <div>
            <h1 class="text-center">{{title}}</h1>
            <p class="text-center text-uppercase">{{description}}</p>
        </div>
        {{/with}}

        {{#with section}}
        <section>

            <div class="card">
                <div class="card-body">
                    {{#with about_us}}
                    <div>
                        <div class="text-end display-6">{{title_list.main}}</div>
                        <h2 class="text-end">{{title_list.sub}}</h2>
                        <br>
                        <div>
                            <button class="btn btn-outline-info">{{button.text}}</button>
                        </div>
                    </div>
                    {{/with}}

                </div>
            </div>

            <br>

            <div class="card">
                <div class="card-body">
                    {{#with advantage}}
                    <div>
                        <div class="display-5">{{title}}</div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            {{#with efficiency}}
                            <div>
                                <div class="display-4">{{title}}</div>
                                <h6>{{sub_title}}</h6>
                                <p>{{description}}</p>
                                <button class="btn btn-outline-warning">{{button}}</button>

                            </div>
                            {{/with}}
                        </div>
                    </div>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            {{#with innovation}}
                            <div>
                                <div class="text-center display-4">{{title}}</div>
                                <h6 class="text-center">{{sub_title}}</h6>
                                <p class="text-center">{{description}}</p>
                                <button class="btn btn-outline-warning">{{button}}</button>
                            </div>
                            {{/with}}
                        </div>
                    </div>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            {{#with collaboration}}
                            <div class="text-end display-4">{{title}}</div>
                            <h6 class="text-end">{{sub_title}}</h6>
                            <p class="text-end">{{description}}</p>
                            <button class="btn btn-outline-warning">{{button}}</button>
                        </div>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
            </div>

            <br>
            <br>

            <div class="card">
                <div class="card-body">

                    {{#with agreement}}
                    <div>
                        <div class="display-5">{{title}}</div>
                    </div>
                    {{#with info}}
                    <div class="card">
                        <div class="card-body">
                            <h5>{{sub_title}}</h5>

                            <div class="card">
                                <div class="card-body">

                                    <p>{{detail.text}}</p>
                                    <button class="btn btn-success">{{detail.button}}</button>

                                </div>
                            </div>
                        </div>

                    </div>
                    {{/with}}
                    {{/with}}

                </div>
            </div>
</div>
</section>
{{/with}}
</main>
</div>